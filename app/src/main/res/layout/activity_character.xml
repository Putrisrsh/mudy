<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="150dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="27sp"
            android:text="@string/your_characteristics"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/layout2"
        android:layout_below="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="25dp">

        <ImageView
            android:id="@+id/img_item_character"
            android:layout_width="200dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            />
    </FrameLayout>

    <RelativeLayout
        android:layout_below="@+id/layout2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/btn_character"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:text="@string/character_name"
            android:onClick="toProfile"/>

        <TextView
            android:layout_below="@+id/btn_character"
            android:id="@+id/detail_character"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textAlignment="center"
            android:text="@string/character_detail"/>

    </RelativeLayout>
</RelativeLayout>